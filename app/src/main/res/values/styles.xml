<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="background_gray">
        <item name="android:background">@color/theme_light</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="blue_button" >
        <item name="android:background" >@drawable/button</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >fill_parent</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >17dp</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="gray_text" >
        <item name="android:textColor" >#7a7a7a</item>
    </style>

    <style name="huge_text" >
        <item name="android:textColor" >@color/white</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize" >70dp</item>
        <item name="android:textAllCaps" >true</item>
    </style>

    <style name="title" >
        <item name="android:textColor" >@color/white</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize" >30dp</item>
        <item name="android:textAllCaps" >true</item>
    </style>

    <style name="subtitle" >
        <item name="android:textColor" >@color/white</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:textSize" >25dp</item>
    </style>

</resources>
