<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:background="@drawable/speech_bubble_right"
        android:layout_margin="5sp"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/message_audio_text"
        android:layout_margin="5sp"
        android:layout_width="0px"
        android:layout_weight="1"
        android:background="@drawable/speech_bubble_right"
        android:shadowColor="@color/textShadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="Medium Text"
        android:textColor="@color/textColor"
        android:textSize="15sp"

        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:id="@+id/message_audio_play"
        android:layout_weight="3"
        android:layout_gravity="right"
        android:focusable="false"
        android:src="@drawable/message_audio_play" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        android:id="@+id/msgAudioTimestamp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/timestampColor"/>

</LinearLayout>