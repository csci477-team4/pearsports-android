<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_trainee_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:fillViewport="false"
        tools:context="com.example.app.TraineeDetailFragment"
    android:background="#00acec">

    <TextView
        android:id="@+id/trainee_detail_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textIsSelectable="true"
        tools:context="com.example.app.TraineeDetailFragment"
        android:fontFamily="Avenir"
        android:textColor="#ffffff" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="27\nWorkouts"
            android:id="@+id/workout_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9.6\nMiles"
            android:id="@+id/miles_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="128\nMinutes"
            android:id="@+id/minutes_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="848\nCalories"
            android:id="@+id/calories_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Personal Information"
        android:paddingLeft="20dp"
        android:fontFamily="Avenir"
        android:textColor="#ffffff"
        android:shadowColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Age: "
        android:id="@+id/age_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:fontFamily="Avenir"
        android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Height: "
        android:id="@+id/height_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:fontFamily="Avenir"
        android:textColor="#ffffff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Weight: "
        android:id="@+id/weight_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:fontFamily="Avenir"
        android:textColor="#ffffff"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:id="@+id/detail_fragment_text_activity_button"
            android:clickable="true"
            android:text="Text"
            android:enabled="true"
            android:focusable="true"
            android:background="#d0d0d0" />
        <Button
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:id="@+id/detail_fragment_audio_activity_button"
            android:clickable="true"
            android:text="Audio"
            android:focusable="true"
            android:enabled="true"
            android:background="#d0d0d0" />
        <Button
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:id="@+id/detail_fragment_workout_activity_button"
            android:clickable="true"
            android:text="Workout"
            android:focusable="true"
            android:enabled="true"
            android:background="#d0d0d0" />
    </LinearLayout>
</LinearLayout>
