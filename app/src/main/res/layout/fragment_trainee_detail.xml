<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_trainee_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:fillViewport="false"
        tools:context="com.example.app.TraineeDetailFragment"
        android:background="@color/dgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image_trainee"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/trainee_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/trainee_detail_text"
                android:textAllCaps="true"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textIsSelectable="true"
                tools:context="com.example.app.TraineeDetailFragment"
                android:fontFamily="Avenir"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/trainee_detail_email"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textIsSelectable="true"
                android:text=""
                android:fontFamily="Avenir"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="27\nWorkouts"
            android:id="@+id/workout_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9.6\nMiles"
            android:id="@+id/miles_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="128\nMinutes"
            android:id="@+id/minutes_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="848\nCalories"
            android:id="@+id/calories_text"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:fontFamily="Avenir"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Personal Information"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:fontFamily="Avenir"
        android:textColor="@color/offblack"
        android:shadowColor="@color/offblack"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/pearsports" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Age: "
        android:id="@+id/age_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:fontFamily="Avenir"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Height: "
        android:id="@+id/height_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:fontFamily="Avenir"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Weight: "
        android:id="@+id/weight_text"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:fontFamily="Avenir"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Notes"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:fontFamily="Avenir"
        android:textColor="@color/offblack"
        android:shadowColor="@color/offblack"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/pearsports" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:text="Allergic to nuts, high blood pressure"
        android:id="@+id/trainee_detail_notes"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:fontFamily="Avenir"
        android:textColor="#ffffff" />

</LinearLayout>
