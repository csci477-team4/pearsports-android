<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dgray"
    tools:context="com.example.app.ScheduleWorkoutActivity" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/dgray"
    tools:context="com.example.app.ScheduleWorkoutActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_name"
            android:text="Workout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="Avenir"
            style="@style/title"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:id="@+id/horizontal"
            android:background="@color/pearsports"
            android:layout_alignBottom="@+id/workout_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="240dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date:"
                    android:paddingLeft="20dp"
                    android:fontFamily="Avenir"
                    style="@style/subsubtitle"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:id="@+id/datePickerStart"
                    android:calendarViewShown="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date:"
                    android:paddingLeft="20dp"
                    android:fontFamily="Avenir"
                    style="@style/subsubtitle"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:id="@+id/datePickerEnd"
                    android:calendarViewShown="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat:"
                    android:fontFamily="Avenir"
                    style="@style/subsubtitle"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sunday"
            android:id="@+id/checkSun" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:id="@+id/checkMon" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:id="@+id/checkTue" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:id="@+id/checkWed" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:id="@+id/checkThu" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:id="@+id/checkFri" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:id="@+id/checkSat" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/schedule_workout"
        android:text="Schedule Workout"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        style="@style/blue_button"
        android:gravity="center|bottom" />

</RelativeLayout>
